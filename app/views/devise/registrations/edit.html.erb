<div class="min-h-screen bg-gray-200 py-10 flex items-center justify-center">
  <div class="mx-8 md:mx-0 md:min-w-md py-5 bg-gray-100 shadow-lg rounded-lg px-10">
    <h2 class="font-bold mb-6 text-gray-800 text-center text-2xl">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class:"block text-gray-700" %>
        <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class: "w-full px-3 py-2 border rounded-lg outline-none"
      %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class:"block text-gray-700" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class:"block text-gray-700" %>
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class:"block text-gray-700" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password,
          autocomplete: "current-password",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="w-full flex items-center justify-center mb-4">
        <%= f.submit "Update", class:"bg-orange-500 hover:bg-orange-600 text-gray-200 font-semibold lg:text-xl p-2 rounded-md cursor-pointer my-8" %>
      </div>
    <% end %>
    <div class="flex flex-col items-center justify-center gap-4">
      <h3>Cancel my account</h3>

      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"bg-red-500 hover:bg-red-600 text-gray-200 font-semibold lg:text-xl p-2 rounded-md cursor-pointer my-4" %></div>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
