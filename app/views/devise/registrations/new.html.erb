<div class="min-h-screen bg-gray-200 flex items-center justify-center">
  <div class="mx-8 md:mx-0 md:min-w-md py-5 my-10 bg-gray-100 shadow-lg rounded-lg px-10">
    <h2 class="font-bold mb-6 text-gray-800 text-center text-2xl">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :full_name, class:"block text-gray-700" %><br />
        <%= f.text_field :full_name,
        autofocus: true,
        autocomplete: "fullname",
        class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class:"block text-gray-700" %><br />
        <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class:"block text-gray-700" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password,
        autocomplete: "new-password",
        class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class:"block text-gray-700" %>
        <%= f.password_field :password_confirmation,
        autocomplete: "new-password",
        class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>

      <div class="w-full flex items-center justify-center mb-4">
        <%= f.submit "Sign up", class:"bg-orange-500 hover:bg-orange-600 text-gray-200 font-semibold lg:text-xl p-2 rounded-md cursor-pointer w-[70%]" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
    <div class="flex items-center justify-start w-full h-5 my-3">
      <%=link_to root_path, class:"flex items-center justify-center gap-1 hover:bg-gray-300 hover:rounded-md hover:py-1 hover:px-3" do %>
        <%=inline_svg_tag("arrow-left.svg", class:"w-5 h-5")%>
        Back
      <%end%>
    </div>
  </div>
</div>
