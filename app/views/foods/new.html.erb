<%= turbo_frame_tag :modal do %>
  <div>
    <%= form_with model: Food.new do |f|%>
      <div class="mb-4">
        <%= f.label :name, class:"block mb-2 text-gray-700" %>
        <%= f.text_field :name,
          autofocus: true,
          autocomplete: "name",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>
      <div class="mb-4">
        <%= f.label :measurement_unit, class:"block mb-2 text-gray-700" %>
        <%= f.number_field :measurement_unit,
          autofocus: true,
          autocomplete: "measurement_unit",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>
      <div class="mb-4">
        <%= f.label :price, class:"block mb-2 text-gray-700" %>
        <%= f.text_field :price,
          autofocus: true,
          autocomplete: "price",
          class: "w-full px-3 py-2 border rounded-lg outline-none"
        %>
      </div>
      <div class="flex items-center justify-center mb-2 my-2">
          <%= f.submit "Create",
            class:"bg-orange-500 hover:bg-orange-600 text-gray-200 font-semibold lg:text-xl p-2 rounded-md cursor-pointer w-[70%]",
            data: {turbo_frame: "_top"}
            %>
        </div>
    <%end%>
  <div>
<%end%>